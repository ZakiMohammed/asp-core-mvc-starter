@model Register
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<form asp-controller="Account" asp-action="Register" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Enter Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Enter Confirm Password">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Submit</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Go Back</a>
    </div>
</form>